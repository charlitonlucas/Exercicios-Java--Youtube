package calculadoras;

import java.util.Scanner;

public class CalculadoraCombustivel {

	public static void main(String[] args) {
		
		double precoGasolina,precoAlcool;
		
		
		System.out.println("Olá!, seja bem vido a calculadora de combustível!");
		System.out.println("Qual o preço da gasolina ?");
				
		Scanner digitePreco= new Scanner(System.in);
		precoGasolina= digitePreco.nextDouble();
		
		System.out.println("Agora, Qual o preço do álcool ?");
		precoAlcool= digitePreco.nextDouble();
		
		double precoMultiplicado=(precoGasolina *0.70);
		
		if (precoAlcool<precoMultiplicado) {
			System.out.println("é melhor abastacer com Álcool.");
		}else {
			System.out.println("é melhor abastecer com gasolina.");
		}
		digitePreco.close();
		
		

	}

	
	}
